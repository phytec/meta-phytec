 ST_GIT_SHA1		:=	$(shell git rev-parse --short=8 HEAD 2>/dev/null)
 VERSION_STRING		:=	v${VERSION_MAJOR}.${VERSION_MINOR}-${PLAT}-${ST_VERSION}(${BUILD_TYPE}):${BUILD_STRING}(${ST_GIT_SHA1})
 
