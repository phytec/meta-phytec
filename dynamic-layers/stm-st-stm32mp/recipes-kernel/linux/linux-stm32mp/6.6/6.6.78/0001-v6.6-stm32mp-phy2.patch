+	status = "disabled";
+
+	sai1a:audio-controller@4400a004{
+		dma-names = "rx";
+		st,sync = <&sai1b 2>;
+		clocks = <&rcc SAI1_K>, <&sai1b>;
+		clock-names = "sai_ck", "MCLK";
+		status = "okay";
+
+		sai1a_port: port {
+			sai1a_endpoint: endpoint {
