+	pinctrl-names = "default", "sleep";
+	pinctrl-0 = <&dcmipp_pins_mx>;
+	pinctrl-1 = <&dcmipp_sleep_pins_mx>;
+	status = "disabled";
+};
+
+&m_can2 {
+	pinctrl-names = "default", "sleep";
+	pinctrl-0 = <&fdcan2_pins_mx>;
+	pinctrl-1 = <&fdcan2_sleep_pins_mx>;
+	status = "disabled";
+};
+
